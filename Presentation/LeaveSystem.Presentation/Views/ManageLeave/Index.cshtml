@if (Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <td>
                    Reason
                </td>
                <td>
                    From Date
                </td>
                <td>
                    To Date
                </td>
                <td>
                    Number of days
                </td>
                <td>
                    Status
                </td>
            </tr>
        </thead>
        <tbody>
            @foreach(var leave in Model)
            {
                <tr>
                    <td>@leave.Reason</td>
                    <td>@leave.FromDate</td>
                    <td>@leave.ToDate</td>
                    <td>@leave.NumberOfDays (days)</td>
                    <td>@leave.LeaveStatus.Name</td>
                </tr>

            }
        </tbody>
    </table>

}
else
{
    <div>
        <h3 class="text-danger">You haven't requested leave</h3>
    </div>
}
